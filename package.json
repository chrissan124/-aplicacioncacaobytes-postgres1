{
  "name": "administrator-site-api-rest",
  "version": "1.0.0",
  "description": "cacao's admin api, built to manage clients, employees and more. ",
  "type": "commonjs",
  "scripts": {
    "test": "test",
    "build": "npm-run-all clean transpile",
    "server": "node ./build/server",
    "dev": "npm-run-all build server",
    "watch:dev": "nodemon",
    "transpile": "babel src -d build",
    "clean": "rimraf build",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "format": "npx prettier --write ."
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "restartable": "rs",
    "watch": [
      "src/*",
      "build/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/cacao-en-bytes/administrator-site/administrator-site-api-rest.git"
  },
  "keywords": [
    "express",
    "rest",
    "api",
    "clean"
  ],
  "author": "luis castillo",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/cacao-en-bytes/administrator-site/administrator-site-api-rest/issues"
  },
  "homepage": "https://gitlab.com/cacao-en-bytes/administrator-site/administrator-site-api-rest#readme",
  "dependencies": {
    "awilix": "^4.3.4",
    "awilix-express": "^4.0.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "cryptr": "^6.0.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "generate-password": "^1.6.1",
    "glob": "^7.1.7",
    "jsonwebtoken": "^8.5.1",
    "luxon": "^2.0.2",
    "mongoose": "^6.0.6",
    "morgan": "^1.10.0",
    "morgan-json": "^1.1.0",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "rimraf": "^3.0.2",
    "sequelize": "^6.6.5",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-decorators": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "kill-port": "^1.6.1",
    "prettier": "^2.3.2"
  }
}
